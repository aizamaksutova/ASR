{
    "name": "train_ds2",
    "n_gpu": 1,
    "preprocessing": {
        "sr": 16000,
        "spectrogram": {
            "type": "MelSpectrogram",
            "args": {}
        },
        "log_spec": true
    },
    "augmentations": {
        "wave": [
            {
                "type": "Shift",
                "args": {
                    "p": 0.2,
                    "min_shift": -0.2,
                    "max_shift": 0.3
                }
            },
            {
                "type": "Gain",
                "args": {
                    "p": 0.1,
                    "min_gain_in_db": -10
                }
            },
            {
                "type": "Guassian_Noise",
                "args": {
                    "p": 1
                }
            }
        ],
        "spectrogram": [
            {
                "type": "FreqMasking",
                "args": {
                    "p": 0.3
                }
            },
            {
                "type": "TimeMasking",
                "args": {
                    "p": 0.3
                }
            }
        ]
    },
    "arch": {
        "type": "DeepSpeech2",
        "args": {
            "n_feats": 128,
            "fc_hidden": 512
        }
    },
    "data": {
        "train": {
            "batch_size": 32,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "part": "train-clean-100",
                        "max_audio_length": 20.0,
                        "max_text_length": 200
                    }
                },
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "part": "train-clean-360",
                        "max_audio_length": 20.0,
                        "max_text_length": 200
                    }
                }
            ]
        },
        "val": {
            "batch_size": 30,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "part": "dev-clean"
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0003
        }
    },
    "loss": {
        "type": "CTCLoss",
        "args": {
            "zero_infinity": true
        }
    },
    "metrics": [
        {
            "type": "ArgmaxWERMetric",
            "args": {
                "name": "WER (argmax)"
            }
        },
        {
            "type": "ArgmaxCERMetric",
            "args": {
                "name": "CER (argmax)"
            }
        }
    ],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 100,
            "epochs": 50,
            "anneal_strategy": "cos",
            "max_lr": 0.0005,
            "pct_start": 0.2
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "asr_project",
        "len_epoch": 100,
        "grad_norm_clip": 10
    }
}
  
